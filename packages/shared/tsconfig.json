{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
